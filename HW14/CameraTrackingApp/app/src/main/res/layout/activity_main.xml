<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alexey.cameratrackingapp.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nothing yet"
            android:id="@+id/cameraStatus"/>

        <SurfaceView
            android:id="@+id/surfaceview"
            android:layout_width="640px"
            android:layout_height="480px"
            android:layout_marginLeft="-10dp"
            android:layout_margin="0dp" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="F"
            android:id="@+id/btnSwitch"
            android:layout_gravity="right"
            android:textAlignment="center"
            android:enabled="true"
            android:clickable="true"/>

        <TextureView
            android:id="@+id/textureview"
            android:layout_width="1px"
            android:layout_height="1px" />

        <SeekBar
            android:id="@+id/seek1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:progress="50"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="50dp"
            android:max="255"
            android:layout_marginTop="-5dp"
            android:progressTint="#f01111"
            android:thumbTint="#060606" />
        <TextView
            android:id="@+id/textView01"
            android:text="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp" />
        <SeekBar
            android:id="@+id/seek2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:progress="255"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:max="255"
            android:progressTint="#11f609"
            android:thumbTint="#0a0a0a" />
        <TextView
            android:id="@+id/textView02"
            android:text="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp" />
        <SeekBar
            android:id="@+id/seek3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:progress="255"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:max="255"
            android:layout_marginBottom="-20dp"
            android:indeterminate="false"
            android:progressTint="#0a3df6"
            android:thumbTint="#090909" />
        <TextView
            android:id="@+id/textView03"
            android:text="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp" />

    </LinearLayout>
</RelativeLayout>

