<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="top"
    android:padding="16dp">
    <TextView
        android:id="@+id/demoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/app_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="0dp" />
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#eeeeee" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nothing yet"
        android:id="@+id/cameraStatus"
        android:layout_marginBottom="-18dp"
        android:layout_gravity="center_horizontal" />
    <SurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="640px"
        android:layout_height="480px"
        android:layout_marginLeft="0dp"
        android:layout_margin="0dp"
        android:layout_gravity="center_horizontal" />
    <ImageButton
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="F"
        android:id="@+id/btnSwitch1"
        android:layout_gravity="top|right"
        android:textAlignment="center"
        android:enabled="true"
        android:clickable="true"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp" />
    <ImageButton
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="F"
        android:id="@+id/btnSwitch2"
        android:textAlignment="center"
        android:enabled="true"
        android:clickable="true"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="-50dp"
        android:background="#fb0606" />
    <ImageButton
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="F"
        android:id="@+id/btnSwitch3"
        android:textAlignment="center"
        android:enabled="true"
        android:clickable="true"
        android:layout_gravity="top|left"
        android:layout_marginTop="-50dp"
        android:background="#21f809"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />
    <SeekBar
        android:id="@+id/seekS"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom = "true"
        android:progress="50"
        android:paddingBottom="12dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="70dp"
        android:max="120"
        android:paddingTop="12dp" />

    <TextView
        android:id="@+id/textView0S"
        android:text="0%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-35dp"
        android:textSize="16dp"
        android:height="30dp"
        android:textStyle="bold"
        android:layout_marginRight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_gravity="top|center_vertical" />

    <TextureView
        android:id="@+id/textureview"
        android:layout_width="1px"
        android:layout_height="1px" />
    <SeekBar
        android:id="@+id/seek1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:progress="9"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginLeft="70dp"
        android:max="255"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp" />
    <TextView
        android:id="@+id/textView01"
        android:text="R"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-35dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_gravity="top|center_vertical"
        android:textSize="16dp"
        android:textStyle="bold"
        android:height="30dp" />
    <SeekBar
        android:id="@+id/seek2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:progress="133"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:max="255"
        android:layout_marginRight="30dp"
        android:indeterminate="false" />
    <TextView
        android:id="@+id/textView02"
        android:text="RG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-35dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_gravity="top|center_vertical"
        android:textSize="16dp"
        android:textStyle="bold"
        android:height="30dp" />
    <SeekBar
        android:id="@+id/seek3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:progress="200"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:max="255"
        android:layout_marginBottom="0dp"
        android:indeterminate="false"
        android:layout_marginRight="30dp" />
    <TextView
        android:id="@+id/textView03"
        android:text="RB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-35dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:height="30dp"
        android:layout_gravity="top|center_vertical" />

</LinearLayout>
